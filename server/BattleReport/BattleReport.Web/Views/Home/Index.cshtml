@model BattleReport.Web.Models.WarModel
@{
    ViewBag.Title = "主页";
}
@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { target = "_blank" }))
{
    <div style="float: left; margin: 0px;">
        <h1 align="center">
            @Html.TextBoxFor(m => m.AttackerName)</h1>
        <ol>
            @for (int i = 0; i < Model.Attacker.Count; i++)
            {
                <li style="float: left; margin: 0px 20px 0px 10px;">
                    @Html.DropDownListFor(m => m.Attacker[i], new SelectList(Model.DataSource, "Value", "Text", Model.Attacker[i]), "空位")
                </li>
               if (i % 5 == 4)
               {
                <div style="clear: both">
                </div>
               }
            }
        </ol>
    </div>
    <div style="clear: both; width: 15%; margin-left: auto; margin-right: auto;">
        <input type="submit" value="开战" />
    </div>
    <div style="float: right; margin: 0px;">
        <h1 align="center" style="margin: 0px;">
            @Html.TextBoxFor(m => m.DefenderName)</h1>
        <ol>
            @for (int i = 0; i < Model.Defender.Count; i++)
            {
                <li style="float: left; margin: 0px 20px 0px 10px;">
                    @Html.DropDownListFor(m => m.Defender[i], new SelectList(Model.DataSource, "Value", "Text", Model.Defender[i]), "空位")
                </li>
               if (i % 5 == 4)
               {
                <div style="clear: both">
                </div>
               }
            }
        </ol>
    </div>
    <div style="clear: both">
    </div>
}
