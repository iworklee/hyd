<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				   xmlns:s="library://ns.adobe.com/flex/spark" 
				   xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%"
				   implements="com.hyd.joker.core.facade.ICatalog"
				   creationComplete="catalog_loaded(event)">
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
		
	</fx:Declarations>
	<fx:Script>
		<![CDATA[			
			import com.hyd.joker.core.layer.CategoryLayer;
			
			import mx.collections.ArrayCollection;
			import mx.controls.Tree;
			import mx.events.FlexEvent;
			
			public var dataSource:String = "factory.catalog";
			private var _data:XML;
			
			protected function catalog_loaded(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				var layer:CategoryLayer = new CategoryLayer();
				layer.copyFrom(ExternalInterface.call(dataSource));
				_tree.dataProvider = new ArrayCollection([layer]);
				_tree.labelField = "text";
			}
			
			public function refresh():void
			{
				
			}
			
		]]>
	</fx:Script>
	<mx:Tree id="_tree" width="100%" height="100%" itemRenderer="com.hyd.joker.core.util.TreeCheckBoxRenderer" />
</s:BorderContainer>
