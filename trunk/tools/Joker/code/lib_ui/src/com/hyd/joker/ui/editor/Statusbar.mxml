<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				   xmlns:s="library://ns.adobe.com/flex/spark" 
				   xmlns:mx="library://ns.adobe.com/flex/mx"
				   width="100%" height="40" bottom="0"
				   implements="com.hyd.joker.core.facade.IStatusbar">
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[			
			import com.hyd.joker.core.Joker;
			import com.hyd.joker.core.facade.Context;
			
			public function refresh():void
			{
				var context:Context = Joker.context;
				_lblScale.text = "1:" + context.map.scale;
				_lblScrPoint.text = "X:" + context.screenPoint.x + ", Y:" + context.screenPoint.y;
				_lblMapPoint.text = "X:" + context.mapPoint.x + ", Y:" + context.mapPoint.y;
				_lblMapSize.text = context.map.contentWidth + "×" + context.map.contentHeight;
				_lblOutput.text = context.outputText;
			}
		]]>
	</fx:Script>
	<s:Label text="比例尺 = " />
	<s:Label id="_lblScale" x="50" y="1" />
	<s:Label text="屏幕坐标 = " x="200" />
	<s:Label id="_lblScrPoint" x="260" y="1" />
	<s:Label text="地图坐标 = " x="400" />
	<s:Label id="_lblMapPoint" x="460" y="1" />
	<s:Label text="地图尺寸 = " x="600" />
	<s:Label id="_lblMapSize" x="660" y="1" />
	<s:Label id="_lblOutput" y="26" />
</s:BorderContainer>
